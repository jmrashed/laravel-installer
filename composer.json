{
    "name": "jmrashed/laravel-installer",
    "description": "A complete web installer for Laravel applications, making the setup process simple and user-friendly.",
    "license": "MIT",
    "authors": [
        {
            "name": "Rashed Zaman",
            "email": "jmrashed@gmail.com",
            "homepage": "https://github.com/jmrashed",
            "role": "Developer"
        }
    ],
    "keywords": [
        "laravel", 
        "installer", 
        "web installer", 
        "laravel setup", 
        "laravel installation", 
        "laravel package"
    ],
    "homepage": "https://github.com/jmrashed/laravel-installer",
    "support": {
        "issues": "https://github.com/jmrashed/laravel-installer/issues",
        "source": "https://github.com/jmrashed/laravel-installer"
    },
    "require": {
        "php": ">=8.1.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/console": "^9.0|^10.0|^11.0",
        "illuminate/http": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "mockery/mockery": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Jmrashed\\LaravelInstaller\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jmrashed\\LaravelInstaller\\Providers\\LaravelInstallerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "suggest": {
        "jmrashed/laravel-core-application-service": "To extend functionality with core application services."
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse src --level=5",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    }
}
